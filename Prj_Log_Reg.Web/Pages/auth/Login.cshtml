@page
@model Prj_Log_Reg.Web.Pages.auth.LoginModel
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"] = "ورود در سایت";
}
<form method="post">
    <h1>@ViewData["Title"]</h1>
    <div>
        <input asp-for="UserName" type="text" placeholder="نام کاربری" required="" />
        <span asp-validation-for="UserName" style="color:red"></span>
    </div>
    <div>
        <input asp-for="Password" type="password" placeholder="کلمه عبور" required="" />
        <span asp-validation-for="Password" style="color:red"></span>
    </div>
    <div>
        <input type="submit" value="ورود" />
        <a href="#">فراموشی کلمه عبور</a>
        <a asp-page="register">ثبت نام</a>
    </div>
</form>
